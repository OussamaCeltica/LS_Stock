<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/div_bon_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:paddingBottom="10dp"
        android:background="@color/AppColor"
        android:orientation="vertical">

        <TextView
            android:id="@+id/div_entre_msg"
            android:layout_width="match_parent"
            android:layout_height="20dp"

            android:background="@drawable/bg_export"
            android:visibility="gone"
            android:gravity="center"
            android:textColor="@color/White"
            android:text="@string/affPrep_validÃ©"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cairo_semibold"
                android:textColor="@color/Black"
                android:text="@string/divEntre_fournis"/>
            <TextView
                android:id="@+id/div_entre_fournis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="-10dp"
                android:fontFamily="@font/cairo_semibold"
                android:textColor="@color/White"
                android:text="BFS/000023"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cairo_semibold"
                android:textColor="@color/Black"
                android:text="@string/div_prep_codeBon"/>
            <TextView
                android:id="@+id/div_entre_codeBon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="-10dp"
                android:fontFamily="@font/cairo_semibold"
                android:textColor="@color/White"
                android:text="BFS/000023"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cairo_semibold"
                android:textColor="@color/Black"
                android:text="@string/div_prep_dateBon"/>
            <TextView
                android:id="@+id/div_entre_dateBon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="-10dp"
                android:fontFamily="@font/cairo_semibold"
                android:textColor="@color/White"
                android:text="2019-05-03"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/div_prep_buttPrep"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:background="@drawable/butt_back_degrade"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:src="@drawable/add_pr"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cairo_semibold"
                android:textColor="@color/Black"
                android:text="@string/div_prep_addPrep"/>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>